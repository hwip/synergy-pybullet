<?xml version="1.0"?>
<robot name="simple_gripper">
    <!--==materials==================================-->
    <material name="red">
        <color rgba="1.0 0.0 0.0 2.0"/>
    </material>
    <material name="finger">
        <color rgba="1.0 1.0 0.0 2.0"/>
    </material>
    <material name="plane">
        <color rgba="0.0 1.0 0.0 2.0"/>
    </material>
    <material name="object">
        <color rgba="0.0 0.0 1.0 2.0"/>
    </material>
    <!--==links======================================-->
    <link name="world"/>
    <link name="table">
        <visual>
            <geometry>
                <box size="10.0 10.0 0.02"/>
            </geometry>
            <material name="plane"/>
        </visual>
        <collision>
            <geometry>
                <box size="10.0 10.0 0.02"/>
            </geometry>
        </collision>
    </link>
    <link name="base_link">
        <visual>
            <geometry>
                <cylinder length="0.2" radius="0.1"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.2" radius="0.1"/>
            </geometry>
        </collision>
    </link>
    <link name="finger_slider">
        <visual>
            <geometry>
                <box size="0.7 0.1 0.1"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.7 0.1 0.1"/>
            </geometry>
        </collision>
    </link>

    <link name="right_finger">
        <contact>
            <lateral_friction value="500.0"/>
            <spinning_friction value=".1"/>
        </contact>
        <visual>
            <geometry>
                <box size="0.4 0.1 0.1"/>
            </geometry>
            <material name="finger"/>
            <origin rpy="0 1.571 0"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.4 0.1 0.1"/>
            </geometry>
            <origin rpy="0 1.571 0"/>
        </collision>
    </link>
    <link name="left_finger">
        <contact>
            <lateral_friction value="500.0"/>
            <spinning_friction value=".1"/>
        </contact>
        <visual>
            <geometry>
                <box size="0.4 0.1 0.1"/>
            </geometry>
            <material name="finger"/>
            <origin rpy="0 1.571 0"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.4 0.1 0.1"/>
            </geometry>
            <origin rpy="0 1.571 0"/>
        </collision>
    </link>

    <!--==joint==========================================-->
    <joint name="world_to_table" type="fixed">
        <parent link="world"/>
        <child link="table"/>
        <origin xyz="0 0 0.0" rpy="0 0 0"/>
    </joint>
    <joint name="table_to_base" type="prismatic">
        <parent link="table"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.2" rpy="1.571 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="0" upper="1.0" effort="1.0" velocity="1.0"/>
    </joint>
    <joint name="base_to_finger_slider" type="fixed">
        <parent link="base_link"/>
        <child link="finger_slider"/>
        <origin rpy="0 0 0" xyz="0 0 0.10"/>
    </joint>
    <joint name="base_to_right_finger" type="prismatic">
        <parent link="base_link"/>
        <child link="right_finger"/>
        <origin rpy="0.001 0 0" xyz="0.05 0 0.35001"/>
        <limit lower="0.0" upper="0.15" effort="1.0" velocity="1.0"/>
    </joint>
    <joint name="base_to_left_finger" type="prismatic">
        <parent link="base_link"/>
        <child link="left_finger"/>
        <origin rpy="-0.001 0 0" xyz="-0.05 0 0.35001"/>
        <limit lower="-0.15" upper="0.0" effort="1.0" velocity="1.0"/>
    </joint>
</robot>